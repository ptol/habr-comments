{
  "manifest_version": 2,

  "name": "Habr comments highlight",
  "description": "Подсвечиваем комментарии habr.com по оценке",
  "version": "0.4",
  
  "icons": {
    "48": "icon_48.png",
    "96": "icon_96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://habr.com/*", "https://m.habr.com/*"],
      "js": ["js/vendor.js", "js/content_script.js"],
      "css": ["css/style.css"]
    }
  ],

  "permissions": [
    "https://habr.com/*",
    "https://m.habr.com/*"
  ]
}
